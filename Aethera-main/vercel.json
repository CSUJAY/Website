{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "installCommand": "npm install", "buildCommand": "npm run build" }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "EMAIL_USER": "EMAIL_USER", // <-- FIXED: Reference the secret name directly
    "EMAIL_PASS": "EMAIL_PASS"  // <-- FIXED: Reference the secret name directly
  }
}
